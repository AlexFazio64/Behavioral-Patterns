<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pattern.controller.RootController">
	<GridPane layoutX="200.0" layoutY="155.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
	          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
		</columnConstraints>
		<rowConstraints>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
		</rowConstraints>
		<children>
			<TextField fx:id="usrFld" onKeyTyped="#inputUSR" GridPane.columnIndex="1" GridPane.columnSpan="2"
			           GridPane.rowIndex="1">
				<font>
					<Font size="26.0"/>
				</font>
			</TextField>
			<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
				<center>
					<Label text="LOGIN" BorderPane.alignment="CENTER">
						<font>
							<Font size="42.0"/>
						</font>
					</Label>
				</center>
			</BorderPane>
			<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
				<center>
					<Label fx:id="userLbl" text="USER" BorderPane.alignment="CENTER">
						<font>
							<Font size="26.0"/>
						</font>
					</Label>
				</center>
			</BorderPane>
			<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
				<center>
					<Label fx:id="passLbl" text="PASS" BorderPane.alignment="CENTER">
						<font>
							<Font size="26.0"/>
						</font>
					</Label>
				</center>
			</BorderPane>
			<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2"
			            GridPane.rowIndex="3">
				<center>
					<Button fx:id="loginBtn" mnemonicParsing="false" onAction="#loginBRO" text="LOGIN"
					        BorderPane.alignment="CENTER">
						<font>
							<Font size="24.0"/>
						</font>
						<padding>
							<Insets left="20.0" right="20.0"/>
						</padding>
					</Button>
				</center>
			</BorderPane>
			<PasswordField fx:id="passFld" onKeyTyped="#inputURSS" GridPane.columnIndex="1" GridPane.columnSpan="2"
			               GridPane.rowIndex="2">
				<font>
					<Font size="26.0"/>
				</font>
			</PasswordField>
		</children>
	</GridPane>
</AnchorPane>
