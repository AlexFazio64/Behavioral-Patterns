<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pattern.controller.RootController">
	<GridPane layoutX="200.0" layoutY="155.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
	          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
		</columnConstraints>
		<rowConstraints>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
		</rowConstraints>
		<ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" GridPane.rowSpan="3">
			<VBox fx:id="unsubbed" prefHeight="200.0" prefWidth="100.0"/>
		</ScrollPane>
		<ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="10.0" layoutY="10.0" prefHeight="200.0"
		            prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowSpan="3">
			<VBox fx:id="subbed" prefHeight="200.0" prefWidth="100.0"/>
		</ScrollPane>
		<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
			<left>
				<Button mnemonicParsing="false" onAction="#sub" prefWidth="65.0" text="Sub"
				        BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="10.0" right="10.0"/>
					</BorderPane.margin>
				</Button>
			</left>
			<right>
				<Button mnemonicParsing="false" onAction="#unsub" prefWidth="65.0" text="Unsub"
				        BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="10.0" right="10.0"/>
					</BorderPane.margin>
				</Button>
			</right>
			<bottom>
				<Button mnemonicParsing="false" onAction="#sendNotif" prefWidth="65.0" text="notify"
				        BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets bottom="10.0"/>
					</BorderPane.margin>
				</Button>
			</bottom>
		</BorderPane>
		<TextField fx:id="notificationTxt" alignment="CENTER" promptText="notification text" GridPane.columnIndex="1"
		           GridPane.rowIndex="2"/>
	</GridPane>
</AnchorPane>
