<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pattern.controller.RootController">
	<BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
	            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<top>
			<Label text="Manufacturing facility" BorderPane.alignment="CENTER">
				<font>
					<Font size="30.0"/>
				</font>
				<BorderPane.margin>
					<Insets top="20.0"/>
				</BorderPane.margin>
			</Label>
		</top>
		<bottom>
			<TextArea fx:id="logger" editable="false" prefHeight="200.0" prefWidth="200.0"
			          BorderPane.alignment="CENTER"/>
		</bottom>
		<center>
			<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
				<BorderPane HBox.hgrow="ALWAYS">
					<center>
						<Button mnemonicParsing="false" onAction="#buildCement" prefHeight="50.0" prefWidth="150.0"
						        text="Cement">
							<font>
								<Font size="20.0"/>
							</font>
						</Button>
					</center>
				</BorderPane>
				<BorderPane HBox.hgrow="ALWAYS">
					<center>
						<Button mnemonicParsing="false" onAction="#buildWood" prefHeight="50.0" prefWidth="150.0"
						        text="Wood">
							<font>
								<Font size="20.0"/>
							</font>
						</Button>
					</center>
				</BorderPane>
			</HBox>
		</center>
	</BorderPane>
</AnchorPane>
